<h1>Login</h1>

<% form_for @user_session, :url => login_url do |f| %>

  <div>
		<%= f.error_messages %>
  	<%= f.label :email %><br />
  	<%= f.text_field :email %><br />
  </div>
	<div>
  	<%= f.label :password %><br />
  	<%= f.password_field :password %><br />
	</div>

	<div>
		<%= f.submit "Login" %>
	</div>
	
<% end %>